<h2><%= @race.name %>'s users registered</h2>

<div class="col-md-6">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Nickname</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.profile.avatar.url(:thumb) %></td>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', races_path %>

</div>